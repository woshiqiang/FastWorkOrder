<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@mipmap/cloud_desk"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_in"
            style="@style/TextViewStyle"
            android:text="签到\n0" />

        <TextView
            android:id="@+id/tv_open_account"
            style="@style/TextViewStyle"
            android:text="开户\n0" />

        <TextView
            android:id="@+id/tv_send_order"
            style="@style/TextViewStyle"
            android:text="派单\n0" />

        <TextView
            android:id="@+id/tv_renewal"
            style="@style/TextViewStyle"
            android:text="续费\n0" />

        <TextView
            android:id="@+id/tv_hidden_door"
            style="@style/TextViewStyle"
            android:text="潜户\n0" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/common_padding"
        android:paddingTop="@dimen/common_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_msg"
                style="@style/TextViewItemStyle"
                android:drawableLeft="@mipmap/msg_list"
                android:text="我的消息" />

            <TextView
                android:id="@+id/tv_unbind"
                style="@style/TextViewItemStyle"
                android:drawableLeft="@mipmap/msg_list"
                android:text="账号解绑" />

            <TextView
                android:id="@+id/tv_query"
                style="@style/TextViewItemStyle"
                android:drawableLeft="@mipmap/msg_list"
                android:text="量化查询" />

            <TextView
                android:id="@+id/tv_enterprise_info"
                style="@style/TextViewItemStyle"
                android:drawableLeft="@mipmap/enterprise_more"
                android:text="企业信息" />

            <TextView
                android:id="@+id/tv_version_info"
                style="@style/TextViewItemStyle"
                android:drawableLeft="@mipmap/system_more"
                android:text="版本消息" />

            <TextView
                android:id="@+id/tv_update_db"
                style="@style/TextViewItemStyle"
                android:layout_marginBottom="@dimen/common_padding"
                android:layout_marginTop="@dimen/common_padding"
                android:drawableLeft="@mipmap/application_more"
                android:text="更新本地库" />

            <TextView
                android:id="@+id/tv_setting"
                style="@style/TextViewItemStyle"
                android:drawableLeft="@mipmap/version_more"
                android:text="系统设置" />

            <TextView
                android:id="@+id/tv_clear_cache"
                style="@style/TextViewItemStyle"
                android:drawableLeft="@mipmap/clear_more"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/tv_exit"
                style="@style/TextViewItemStyle"
                android:drawableLeft="@mipmap/cancel_more"
                android:text="退出" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>