<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <!-- 沉浸式状态栏 -->
        <!--  <item name="android:fitsSystemWindows">true</item>
          <item name="android:clipToPadding">false</item>-->
    </style>

    <!--更多页面5个文本样式-->
    <style name="TextViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/gridview_bg</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--更多点击项-->
    <style name="TextViewItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/gridview_bg</item>
        <item name="android:drawableRight">@mipmap/more2</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--开户 TextView -->
    <style name="TextLeftStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <!--Spinner-->
    <style name="MySpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textColor">@color/edittext_color</item>
    </style>

    <style name="MyLLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


</resources>
